<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect"
    android:layout_margin="5dp"
    android:weightSum="1">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width  ="fill_parent"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="145dp"
                android:layout_height="175dp"
                android:id="@+id/imageView2"
                android:background="#CC33CC"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/defualt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="37dp"
                android:paddingRight="5dp"
                android:textStyle="bold"

                android:singleLine="false"
                android:text="Large Text"
                android:id="@+id/textViewshowname"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:paddingBottom="80dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:paddingRight="5dp"
                android:id="@+id/textViewlastname"
                android:layout_below="@+id/textViewshowname"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingRight="10dp"
                android:id="@+id/textViewshowbirthday"/>
        </RelativeLayout>

        <LinearLayout
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout

    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:background="@drawable/rect"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:text="Large Text"
        android:id="@+id/textViewshowrakmmanzl"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewshowfloor"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:id="@+id/textViewshowhomen"
        android:layout_gravity="right" />
</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/rect"
        android:padding="10dp"
        android:layout_marginBottom="15dp"

        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="fill_parent"
    android:id="@+id/callbaba"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"

    android:weightSum="100"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:layout_weight="20"
        android:src="@drawable/call"

        android:background="@android:color/transparent"
        android:id="@+id/buttoncallbaba"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textIsSelectable="true"
        android:text="Large Text"
        android:id="@+id/textViewshowbaba"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بابا"
        android:textSize="25dp"
        android:textColor="#CC33CC"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/callmama"
        android:weightSum="100"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_weight="20"
            android:src="@drawable/call"

            android:id="@+id/buttoncallmama"
            android:layout_gravity="center_horizontal" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textIsSelectable="true"

            android:textSize="18dp"
        android:text="Large Text"
        android:id="@+id/textViewshowmama"
        android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ماما"
            android:id="@+id/textView3"
            android:textSize="25dp"
            android:textColor="#CC33CC"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/callphone"
            android:weightSum="100"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"

            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:layout_weight="20"
                android:src="@drawable/call"
                android:background="@android:color/transparent"
                android:id="@+id/buttoncallphone"
                android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Large Text"
        android:id="@+id/textViewshowphone"
        android:textIsSelectable="true"


        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المنزل"
                android:id="@+id/textView6"
                android:textSize="25dp"
                android:textColor="#CC33CC"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


    </LinearLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:id="@+id/Linanother"
                android:background="@drawable/rect"
                android:layout_marginBottom="15dp"

                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewshowdesc"
        android:layout_alignParentRight="true"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="35dp"
        android:paddingTop="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="وصف العنوان"
                    android:textSize="20dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:id="@+id/textView8"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:id="@+id/Lindesc"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rect"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:layout_alignParentRight="true"
                    android:paddingRight="35dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="50dp"
                    android:paddingBottom="20dp"
                    android:id="@+id/textViewshowanotheraddr" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="عنوان اخر"
                    android:textSize="20dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:id="@+id/textView7"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>



        </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>